    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tests (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build tests",
            "stopAtEntry": false,
            "program": "zig-out/bin/wwise_zig_test.exe",
            "args": [],
        },
        {
            "name": "Debug tests (UNIX)",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build tests",
            "stopAtEntry": false,
            "target": "zig-out/bin/wwise_zig_test",
            "valuesFormatting": "parseText",
            "arguments": ""
        }
    ]
}